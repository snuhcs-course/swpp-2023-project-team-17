<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/professor_attendance_bg"
    android:layout_marginBottom="4dp">

    <TextView
        android:id="@+id/attendanceDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clipToOutline="true"
        android:text="Attendance Date"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="16dp"
        style="@style/SmallFont"
        android:layout_gravity="center"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/attendanceStatusText"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:clipToOutline="true"
        android:text="Status"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/relay_noto_sans_semibold"
        style="@style/SmallFont"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@drawable/present_bg"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sendButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Send"
        style="@style/SmallFont"
        android:textColor="@color/blue"
        android:layout_gravity="center_vertical"
        android:enabled="true"
        android:layout_marginEnd="8dp"
        android:background="@drawable/attendance_list_btn"
        />


</LinearLayout>