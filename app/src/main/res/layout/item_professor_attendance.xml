<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@drawable/professor_attendance_bg"
    android:layout_marginBottom="4dp">

    <TextView
        android:id="@+id/attendanceDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_gravity="center"
        android:clipToOutline="true"
        android:text="Attendance Date"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/relay_noto_sans_semibold"
        style="@style/SmallFont"
        android:textSize="20sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/studentListButton"
        style="@style/SmallFont"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/attendance_list_btn"
        android:clipToOutline="true"
        android:layout_gravity="center_vertical"
        android:text="List" />
</LinearLayout>
